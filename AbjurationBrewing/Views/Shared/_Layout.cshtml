	<body>
        <header>
	        <section class="hero">
		        <div class="texture-overlay"></div>
		        <div class="container">
			        <div class="row nav-wrapper">
				        <div class="col-md-6 col-sm-6 col-xs-6 text-left">
					        <a href="index.htm"><img src="Images/Abjuration-Brewing-Company_Logo.png" alt="Abjuration Brewing Company Logo"></a>
				        </div>
				        <div class="col-md-6 col-sm-6 col-xs-6 text-right navicon">
					        <p>MENU</p><a id="trigger-overlay" class="nav_slide_button nav-toggle" href="#"><span></span></a>
				        </div>
			        </div>
			        <div class="row hero-content">
				        <div class="col-md-12">
                        
                        	
                            <div id="heroLogo"></div>
                        
					        <h1 class="animated fadeInDown">Welcome to Abjuration Brewing</h1>
                            
                            <section id="buttons" class="center">
					        <a id="ourBeersNav" href="#ourbeers" class="use-btn animated fadeInUp">Our Beers <i class="fa fa-chevron-circle-down"></i></a> 
                            
                            <a href="#about" class="learn-btn animated fadeInUp">About Us <i class="fa fa-chevron-circle-down"></i></a>
                            </section>
                            
				        </div>
			        </div>
		        </div>
	        </section>
        </header>

         @RenderBody()

        <!-- **************************** contact ***************************--> 
        <section class="contact" id="contact">
	        <div class="container">
		        <div class="row">
                    <div class="col-md-12 text-center wp4">
                    <div id="contactBlock">
				        <h1>Contact Us</h1>
                        <section class="contactButtons">
				        <a href="mailto:info@abjurationbrewing.com?subject=Contact from website" class="download-btn" style="background:rgba(0,0,0,0.95); margin-right:20px;">Email <i class="fa fa-envelope-o"></i></a>
                        <a href="https://www.facebook.com/AbjurationBrewing" class="download-btn" target="_blank" style="background:rgba(0,0,0,0.95); margin-right:20px;">Facebook <i class="fa fa-facebook"></i></a>

                        <a href="https://twitter.com/abjurationbrew" class="download-btn" target="_blank" style="background:rgba(0,0,0,0.95); margin-right:20px;">Twitter <i class="fa fa-twitter"></i></a>

                        <a href="https://untappd.com/AbjurationBrewing" class="download-btn" target="_blank" style="background:rgba(0,0,0,0.95); margin-right:20px;">Untappd <i class="fa fa-glass"></i></a>
                    </section>
                        
			        </div>
                    </div>  
		        </div>
	        </div>
        </section>
        <!-- **************************** footer ***************************-->     
        <footer>
	        <div class="container">
		        <div class="row">
			        <div class="col-md-5">
				        <h1 class="footer-logo">
				        <img src="Images/Abjuration-Brewing-Company_Logo_black.png" alt="Abjuration Brewing Company Logo">
				        </h1>
				        <p>© Abjuration Brewing Company 2015</p>
			        </div>
			        <div class="col-md-7">
				        <ul class="footer-nav">
					        <li><a href="#about">About</a></li>
					        <li><a href="#ourbeers">Our Beers</a></li>
					        <li><a href="#photos">Photos</a></li>
					        <li><a href="#contact">Contact</a></li>
				        </ul>
			        </div>
		        </div>
	        </div>
        </footer>

        <!-- **************************** Nav items ***************************-->
        <div class="overlay overlay-boxify">
	        <nav>
		        <ul>
			        <li><a href="#about"><i class="fa fa-magic"></i>About</a></li>
			        <li><a href="#ourbeers"><i class="fa fa-beer"></i>Our Beers</a></li>
		        </ul>
		        <ul>
			        <li><a href="#photos"><i class="fa fa-camera-retro"></i>Photos</a></li>
			        <li><a href="#contact"><i class="fa fa-envelope-o"></i>Contact</a></li>
		        </ul>
	        </nav>
        </div>

        <!-- **************************** Age Confirm ***************************-->

        <div id="ageConfirmDiv" class="ageConfirmDiv">
            <div class="poplogo"><img src="Images/Abjuration-Brewing-Company.png" alt="ABCo" /></div>

            <h2>Are you at least 21 years old?</h2>
            
            <button id="ageYes" class="download-btn">Yes <i class="fa fa-thumbs-up"></i></button>&nbsp;
            <button id="ageNo" class="download-btn">No <i class="fa fa-thumbs-down"></i></button>
            <p><strong>Abjuration Brewing</strong> is committed to responsible drinking.</p>
        </div>


